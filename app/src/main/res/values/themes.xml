<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Modern Material Design 3 -->
    <style name="Theme.RiskWatch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors with enhanced palette -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@android:color/black</item>
        
        <!-- Surface and background colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/text_on_primary</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Enhanced window features -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        
        <!-- Modern transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_bounds</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_bounds</item>
    </style>
    
    <!-- Enhanced Toolbar Style with Gradient -->
    <style name="RiskWatch.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@drawable/gradient_primary_toolbar</item>
        <item name="titleTextColor">@color/text_on_primary</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark</item>
        <item name="android:elevation">8dp</item>
    </style>
    
    <!-- Premium Card Styles -->
    <style name="RiskWatch.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/surface_color</item>
    </style>
    
    <style name="RiskWatch.Card.Stats" parent="RiskWatch.Card">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    
    <!-- Modern Button Styles -->
    <style name="RiskWatch.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="RiskWatch.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="RiskWatch.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>
    
    <!-- Enhanced Chip Styles -->
    <style name="RiskWatch.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="checkedIconTint">@color/primary_color</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/divider_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Modern Text Styles with Enhanced Typography -->
    <style name="RiskWatch.Text.Toolbar" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="RiskWatch.Text.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="RiskWatch.Text.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="RiskWatch.Text.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="RiskWatch.Text.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="RiskWatch.Text.Counter" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <!-- Enhanced Tab Layout Style -->
    <style name="RiskWatch.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabSelectedTextColor">@color/primary_color</item>
        <item name="tabIndicatorColor">@color/primary_color</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="android:elevation">0dp</item>
    </style>
    
    <!-- Floating Action Button Style -->
    <style name="RiskWatch.FAB" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="tint">@color/text_on_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="elevation">8dp</item>
    </style>
    
    <!-- Progress Indicator Styles -->
    <style name="RiskWatch.Progress.Circular" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/primary_color</item>
        <item name="trackColor">@color/primary_light</item>
        <item name="indicatorSize">48dp</item>
        <item name="trackThickness">4dp</item>
    </style>
    
    <style name="RiskWatch.Progress.Linear" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/primary_color</item>
        <item name="trackColor">@color/divider_color</item>
        <item name="trackCornerRadius">2dp</item>
        <item name="indicatorCornerRadius">2dp</item>
    </style>
    
    <!-- Modern Bottom Sheet Style -->
    <style name="RiskWatch.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/surface_color</item>
        <item name="shapeAppearance">@style/RiskWatch.ShapeAppearance.BottomSheet</item>
        <item name="behavior_peekHeight">200dp</item>
        <item name="behavior_hideable">true</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="RiskWatch.ShapeAppearance.BottomSheet" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Animated Badge Style -->
    <style name="RiskWatch.Badge" parent="Widget.Material3.Badge">
        <item name="backgroundColor">@color/high_risk_color</item>
        <item name="badgeTextColor">@color/text_on_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>