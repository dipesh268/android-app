<?xml version="1.0" encoding="utf-8"?>
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            app:title="RiskWatch"
            app:menu="@menu/dashboard_menu" />

        <HorizontalScrollView
            android:id="@+id/filter_scroll_view"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:scrollbars="none"

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filter_chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all_apps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Apps"
                    android:checked="true"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_high_risk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Risk"
                    app:chipIcon="@drawable/ic_circle_red"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_medium_risk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Risk"
                    app:chipIcon="@drawable/ic_circle_yellow"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_low_risk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low Risk"
                    app:chipIcon="@drawable/ic_circle_green"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_with_trackers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With Trackers"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/apps_recycler_view"
            android:padding="16dp"
            android:clipToPadding="false"

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/loading_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"

        <ImageView

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No apps found"

    </LinearLayout>
